@model IEnumerable<FeesAutomationWebsite.Models.Fee>

@{
    ViewBag.Title = "Index";
   
}
<h2>Fee Setup</h2>
<table id="FeeTypeMapping-header-table" class="card card-table card-border-color card-border-color-primary" role="grid" style="width: 35%">
    <thead>
        <tr>
            <th>
                <a class="btn btn-success" onclick="location.href='@Url.Action("Create", "Fee")'">Add New</a>
            </th>
            <th>
                <a id="btn-update-autoapply-selected" class="btn btn-success" tabindex="0" href="#">
                    <span>Update Auto Apply</span>
                </a>
            </th>
            <th></th>
            <th></th>
            <th>
                <label id="FolderScopeCode"><span>Folder</span></label>
            </th>
            <th>
                <label id="SegmentScopeCode"><span>Segment</span></label>
            </th>
            <th>
                <label id="DurationScopeCode"><span>Duration</span></label>
            </th>
        </tr>
</table>
<br />
<div class="row">
    <div class="col-sm-12">
        <div class="card card-table card-border-color card-border-color-primary">
            <div class="card-header row">

            </div>
            <div class="card-body">
                <div id="pendingfees-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="row be-datatable-body">
                        <div class="col-sm-12">
                            <table id="fee-table" class="table table-striped table-hover table-fw-widget dataTable" role="grid" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Id)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OutletCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.BranchCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PricingProfile)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CompanyId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FeeType)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FeePerSegment)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FeePerFolder)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FeePerDuration)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AutoApply)
                                        </th>
                                        <th></th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EditAutoApply)
                                        </th>
                                        
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/feemanage")

}